<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="600"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <test_controller id="mycntrl" library="build/testing/libtest_controller">
      <params alpha="7.5" delta="0.1" velocity="5" />
      <actuators>
        <leo_posetwist implementation="default"/>
      </actuators>
      <sensors>
        <leo_odometry implementation="default"/>
      </sensors>
    </test_controller>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="4, 4, 1" center="0,0,0.5">

    <leo id="leo">
      <body position="0,0,0" orientation="0,0,0" />
      <controller config="mycntrl" />
    </leo>

    <box id="los" size="0.2,0.2,0.1" movable="false">
      <body position="1,0,0" orientation="0,0,0"/>
    </box>

    <!-- <distribute>
         <position method="uniform" min="1,0,0" max="2,0,0" />
         <orientation method="constant" values="0,0,0" />
