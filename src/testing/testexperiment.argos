         <cylinder id="c" height="0.5" radius="005" movable="false" />
         </entity>
         </distribute>

<distribute>
<position method="uniform" min="0,1,0" max="0,2,0" />
<orientation method="constant" values="0,0,0" />
<entity quantity="1" max_trials="100">
<cylinder id="d" height="0.5" radius="0.2" movable="false" />
</entity>
</distribute> -->
    
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media />

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placements>
          <placement index="0" position="0,0,5" look_at="0,0,0" up="-1,0,0" lens_focal_length="65" />
        </placements>
      </camera>
    </qt-opengl>
    
  </visualization>

</argos-configuration>
