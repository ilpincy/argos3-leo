<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="600"
                ticks_per_second="10"
                random_seed="124" />
  </framework>

  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <leo_test_communication id="mycntrl" library="build/testing/libleo_test_communication">
      <actuators>
        <leo_wifi />
      </actuators>
      <sensors>
        <leo_wifi wifi_iface="wlan_int" ip_address="" multicast_address="224.0.0.20" multicast_port="8888"/>
      </sensors>
    </leo_test_communication>
  </controllers>

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="4, 4, 1" center="0,0,0.5">

    <leo id="leo">
      <body position="0,0,0" orientation="0,0,0" />
      <controller config="mycntrl" />
    </leo>

    <box id="los" size="0.2,0.2,0.1" movable="false">
      <body position="1,0,0" orientation="0,0,0"/>
    </box>

  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics2d id="dyn2d" />
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media />

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->
  <visualization>
    <qt-opengl>
      <camera>
        <placements>
          <placement index="0" position="0,0,5" look_at="0,0,0" up="-1,0,0" lens_focal_length="65" />
        </placements>
      </camera>
    </qt-opengl>
    
  </visualization>

</argos-configuration>
